        "tags": ["class"],
        "summary": "Get all classes",
        "description": "Return all classes",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "groupBy",
            "in": "query",
            "description": "Select field to group classes by",
            "schema": {
              "type": "string",
              "default": "semester"
